FUNCTION MDA_DEC(MONEANY,MONEDEC)
   MONEDEC:=IF(MONEDEC=NIL, 0 ,MONEDEC)
   IF MONEANY>=2002
      MONEDA_NUM2:=2+MONEDEC
   ELSE
      MONEDA_NUM2:=0+MONEDEC
   ENDIF
   RETURN(MONEDA_NUM2)
*
FUNCTION MDA_SIDEC(MONEANY)
   IF MDA_DEC(MONEANY)<>0
      MONEDA_NUM2:=1
   ELSE
      MONEDA_NUM2:=0
   ENDIF
   RETURN(MONEDA_NUM2)
